<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrescriptionDetails">

    <TextView
        android:id="@+id/medName"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:editable="false"
        android:hint="you should never see this"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/dosage"
        app:layout_constraintEnd_toStartOf="@+id/buttonDetails"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dosage"
        android:layout_width="51dp"
        android:layout_height="25dp"
        android:hint="you should never see this"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/notes"
        app:layout_constraintStart_toStartOf="@+id/medName"
        app:layout_constraintTop_toBottomOf="@+id/medName" />

    <TextView
        android:id="@+id/notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="you should never see this"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/docNotes"
        app:layout_constraintStart_toStartOf="@+id/dosage"
        app:layout_constraintTop_toBottomOf="@+id/dosage" />

    <TextView
        android:id="@+id/docNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="false"
        android:hint="you should never see this"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/buttonAddEditPresciption"
        app:layout_constraintStart_toStartOf="@+id/notes"
        app:layout_constraintTop_toBottomOf="@+id/notes" />

    <Button
        android:id="@+id/buttonDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/medName"
        app:layout_constraintTop_toTopOf="@+id/medName" />

    <Button
        android:id="@+id/buttonAddEditPresciption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add / Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/docNotes"
        app:layout_constraintTop_toBottomOf="@+id/docNotes" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toEndOf="@+id/buttonAddEditPresciption"
        app:layout_constraintTop_toTopOf="@+id/buttonAddEditPresciption" />
</androidx.constraintlayout.widget.ConstraintLayout>
